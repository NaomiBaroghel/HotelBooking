<Window x:Class="WPF_UI.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="ChoiceWindow" Height="200" Width="400"  WindowStartupLocation="CenterScreen"  ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="Images/allbackground.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Image Name="logo" Margin="152,0,-36,130" >
            <Image.Source>
                <BitmapImage  DecodePixelWidth="300" UriSource="/Images/bandeau2.jpg"/>
            </Image.Source>
        </Image>
        <TextBlock x:Name="choice"  Text="Do you want to make another reservation ?" FontSize="18"   Margin="10,46,0,75" />

        <Button x:Name="close" Content="Close" FontSize="16" Height="27" Width="58" HorizontalAlignment="Right" VerticalAlignment="Top" Click="close_Click" Margin="0,126,10,0"  />
        <Button x:Name="yes" Content="Yes" FontSize="16" Height="27" Width="58" HorizontalAlignment="Right" VerticalAlignment="Top" Click="yes_Click" Margin="0,126,92,0"  />
        <Button x:Name="main" Content="Return to Menu" FontSize="12" Height="28" Width="88" HorizontalAlignment="Right" VerticalAlignment="Top" Click="main_Click" Margin="0,126,180,0"  />


    </Grid>
</Window>
